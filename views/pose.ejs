<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= pose.title %></title>
    <link type="text/css" rel="stylesheet" href="/style.css">
    <link href="https://fonts.cdnfonts.com/css/hansen-shadow" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/jelly-anika" rel="stylesheet">
    <link rel="icon" href="./favicon.ico" type="image/x-icon">
  </head>
  <body>
    <main>
      <h1><%= pose.title %></h1>  
      <p><%= pose.difficulty_level %></p>
      <img src="/images/<%= pose.image %>">
      <p><%= pose.description%></p>
      <a href="/poses" id="return" onMouseOver="mouseOver()" onMouseOut="mouseOut()">Return</a>
      
      <form action="/poses/<%=pose.id%>/delete" method="post">
        <button type="submit" id="delete" onclick="return confirm('Are you sure you want to delete this pose?');" onMouseOver="mouseOver2()" onMouseOut="mouseOut2()">Delete pose</button>
      </form>
    </main>
  </body>
</html>

<script>
  function mouseOver() {
    document.getElementById("return").style.color = "#CC0099";
    document.getElementById("return").style.background = "#F7DFF1";
  }

  function mouseOver2() {
    document.getElementById("delete").style.color = "#FFF7FD";
    document.getElementById("delete").style.background = "#008080";
  }
  
  function mouseOut() {
    document.getElementById("return").style.color = '#C866B0';
    document.getElementById("return").style.background = "#FFF7FD";
  }

  function mouseOut2(){
    document.getElementById("delete").style.color = "#C866B0";
    document.getElementById("delete").style.background = "#FFF7FD";
  }
  </script>